<style>
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .modal .backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Fondo difuminado */
            z-index: 999; /* Asegura que el fondo difuminado esté detrás del modal */
        }

        .modal .modal-dialog {
            z-index: 1000;
            background-color: white; /* Fondo del modal */
            padding: 20px;
            border-radius: 8px;
            position: relative; /* Asegura que el contenido del modal no esté afectado por el z-index */
        }

        .modal .modal-content {
            /* Puedes mantener los estilos actuales para el contenido del modal */
        }
</style>



<div class="modal" id="myModal" style="display: @(ShowModal ? "block" : "none")">
    <div class="backdrop"></div>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@TitleModal</h4>
                <button type="button" class="close" @onclick="CerrarModal">&times;</button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] 
    public bool ShowModal { get; set; }
    [Parameter]
    public string TitleModal { get; set; } = default!;
    [Parameter] 
    public RenderFragment ChildContent { get; set; } = default!;

    private void CerrarModal()
    {
        ShowModal = false;
    }
}
